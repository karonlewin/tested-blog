<% if @post.errors.any? %>
  <div class="alert alert-warning alert-dismissible floating_alert" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved: </h2>
    <div>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li>
      <%= msg %>
      </li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>


<header class="intro-header" style="background-image: url('/assets/home.png')">
  <div class="container">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <div class="post-heading">
                  <h1>
                    <%= @post.title %>
                  </h1>
                  <!--<h2 class="subheading">Problems look mighty small from 150 miles up</h2>-->
                  <span class="meta">Posted by <a href="#">Karon</a> on <%= @post.created_at.strftime("%B %-d, %Y") %>
                    <%= link_to edit_post_path(@post), html_options = {id: 'edit-post'} do %>
                      <span class="glyphicon glyphicon-edit" aria-hidden="true" style="margin-left: 2px;"></span>
                    <% end %>
                  </span>

              </div>
          </div>
      </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <%= form_for @post, html: {name: 'sentMessage', id: 'contactForm'} do |f| %>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label><%= f.label :title %></label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>

        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label><%= f.label :content %></label>
            <%= f.text_field :content, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="form-group">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
