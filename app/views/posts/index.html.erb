<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header posts">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>B<b style="color: #ffcc66;">log</b> {DD}</h1>
          <hr class="small">
          <span class="subheading">A blog developed to learn and practice BDD</span>
        </div>
      </div>
    </div>
  </div>
</header>


<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

      <% @posts.each do |post| %>
        <div class="post-preview">
          <%= link_to post_path(post) do %>
            <h2 class="post-title">
              <%= post.title %>
            </h2>
          <% end %>
          <h3 class="post-subtitle" style="display: none;">
            <%= post.content.html_safe %>
          </h3>
          <p class="post-meta"><%= post.created_at.strftime("%B %d, %Y") %></p>
        </div>
        <hr>
      <% end %>

      <!--
      <ul class="pager">
        <li class="next">
          <a href="#">Older Posts &rarr;</a>
        </li>
      </ul>
      -->
    </div>
  </div>
</div>
